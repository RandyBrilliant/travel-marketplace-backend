# Auto detect text files and perform LF normalization
* text=auto

# Shell scripts should always use LF
*.sh text eol=lf

# Docker files should use LF
Dockerfile* text eol=lf
docker-compose*.yml text eol=lf

# Python files
*.py text eol=lf

# Configuration files
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf
*.toml text eol=lf

# Other text files
*.md text eol=lf
*.txt text eol=lf
*.conf text eol=lf
